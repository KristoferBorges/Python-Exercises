<TelaPrincipal>

    MDBottomNavigation:
        panel_color: .1, .3, .3, 0.7
        selected_color_background: "orange"
        text_color_active: "black"
        text_color_normal: "white"

        MDBottomNavigationItem:
            name: 'inicio'
            text: 'INICIO'
            icon: 'home'
            badge_icon: ""
            
            MDFillRoundFlatButton:
                text: "TELA DE LOGIN"
                font_name: app.font_monofonto
                md_bg_color: 1, 3, 3, 0.7
                size_hint_y: None
                size_hint_x: None
                height: 50
                width: 200
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: 
                    root.logout()
                    root.manager.current = "login_screen"

        MDBottomNavigationItem:
            name: 'cadastrar'
            text: 'CADASTRAR'
            icon: 'account'
            badge_icon: ""

            MDLabel:
                text: 'TELA DE CADASTRO'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'consultar'
            text: 'CONSULTAR'
            icon: 'search-web'
            badge_icon: ""

            MDLabel:
                text: 'TELA DE CONSULTA'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'alterar'
            text: 'ALTERAR'
            icon: 'pencil'

            MDLabel:
                text: 'TELA DE ALTERAÇÕES'
                halign: 'center'
                
        MDBottomNavigationItem:
            name: 'deletar'
            text: "DELETAR"
            icon: 'delete'
            

            MDLabel:
                text: 'TELA DE EXCLUSÃO'
                halign: 'center'
                