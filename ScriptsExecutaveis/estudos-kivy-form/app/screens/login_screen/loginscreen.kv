<LoginScreen>:
    MDGridLayout:
        cols: 1
        row_default_height: dp(50)
        row_force_default: True
        spacing: dp(16)

        MDLabel:
            text: "ACESSE SUA CONTA"
            font_family: ""
            theme_text_color: "Secondary"
            font_style: "H5"
            halign: "center"
            font_name: "app/support/font/Noodles.otf"
        
        MDBoxLayout:
            orientation: "horizontal"
            spacing: dp(60)
            padding: dp(23)
            
            MDTextField:
                id: text_login
                hint_text: "Login"
                helper_text_mode: "persistent"
                helper_text: "Email/Usu√°rio"
                icon_right: "account"
                icon_right_color: app.theme_cls.primary_color
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: None
                hint_text_color_focus: "white"
                max_text_length: 30
                width: 350
            
            MDTextField:
                id: text_senha
                hint_text: "Senha"
                password: True
                icon_right: "key"
                icon_right_color: app.theme_cls.primary_color
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: None
                hint_text_color_focus: "white"
                width: 280

        MDGridLayout:
            cols: 1
            spacing: dp(60)
            padding: dp(20)

            MDFillRoundFlatButton:
                text: "FAZER LOGIN"
                md_bg_color: 1, 3, 3, 0.7
                size_hint_y: None
                size_hint_x: None
                size_hint: (0.5, 0.5) 
                height: 50
                width: 200
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: 
                    root.realizarLogin()
                    root.manager.current = "tela_principal"