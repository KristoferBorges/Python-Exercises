<LoginScreen>:
    MDGridLayout:
        cols: 1
        row_default_height: dp(50)
        row_force_default: True
        spacing: dp(16)

        MDLabel:
            text: "TELA DE LOGIN"
            theme_text_color: "Primary"
            font_style: "H5"
            halign: "center"
        
        MDBoxLayout:
            orientation: "horizontal"
            spacing: dp(60)
            padding: dp(23)
            

            MDTextField:
                hint_text: "Login"
                helper_text_mode: "on_focus"
                icon_right: "account"
                icon_right_color: app.theme_cls.primary_color
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: None
                width: 300
            
            MDTextField:
                hint_text: "Senha"
                helper_text_mode: "on_focus"
                icon_right: "key"
                icon_right_color: app.theme_cls.primary_color
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: None
                width: 200

            MDBoxLayout:
                orientation: "horizontal"
                spacing: dp(60)
                padding: dp(20)

                MDRoundFlatButton:
                    text: "FAZER LOGIN"
                    text_color: "white"
                    size_hint_y: None
                    size_hint_x: None
                    height: 50
                    width: 200
                    pos_hint: {"center_x": .5, "center_y": .5}